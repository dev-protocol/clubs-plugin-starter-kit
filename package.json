{
	"name": "@devprotocol/clubs-plugin-starter-kit",
	"version": "0.1.0",
	"type": "module",
	"description": "Template repository for using TypeScript",
	"main": "dist/index.js",
	"exports": {
		".": {
			"default": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"types": "./dist/index.d.ts",
	"files": [
		"dist/*.d.ts",
		"dist/*.js",
		"!**/*.test.*",
		"!dist/vitest.*",
		"src"
	],
	"keywords": [
		"clubs-plugin"
	],
	"scripts": {
		"test": "vitest",
		"preview": "astro --root .preview/preview.ssr dev",
		"preview:static": "astro --root .preview/preview.static dev",
		"build": "rollup -c",
		"prebuild": "rimraf dist",
		"lint": "yarn lint:eslint && yarn lint:format",
		"lint:eslint": "eslint . --fix",
		"lint:format": "prettier --write '**/*.{ts,js,mjs,cjs,tsx,jsx,astro,vue,svelte,json,md,yml}'",
		"prepack": "yarn test --run && yarn prebuild && yarn build",
		"prepare": "husky",
		"typecheck": "astro check && tsc --noEmit && svelte-check && vue-tsc --noEmit --p tsconfig.vue.json"
	},
	"author": "",
	"license": "MPL-2.0",
	"dependencies": {
		"@devprotocol/dev-kit": "8.7.0",
		"@devprotocol/util-ts": "4.0.0",
		"bignumber.js": "9.3.0",
		"ramda": "0.30.1",
		"sass": "1.87.0"
	},
	"peerDependencies": {
		"@devprotocol/clubs-core": "^2.1.1 || ^3.0.0",
		"ethers": "^6.0.0"
	},
	"devDependencies": {
		"@astrojs/check": "0.9.4",
		"@astrojs/svelte": "7.0.10",
		"@astrojs/vue": "5.0.10",
		"@devprotocol/clubs-core": "3.26.6",
		"@eslint/js": "^9.12.0",
		"@rollup/plugin-typescript": "12.1.2",
		"@tailwindcss/typography": "^0.5.10",
		"@tailwindcss/vite": "^4.0.6",
		"@types/dotenv": "8.2.3",
		"@types/eslint-config-prettier": "^6.11.3",
		"@types/eslint__js": "^8.42.3",
		"@types/node": "22.14.1",
		"@types/ramda": "0.30.2",
		"astro": "5.7.4",
		"dotenv": "16.5.0",
		"eslint": "^9.12.0",
		"eslint-config-prettier": "10.1.2",
		"eslint-plugin-functional": "^9.0.0",
		"ethers": "6.13.5",
		"globals": "^16.0.0",
		"husky": "9.1.7",
		"prettier": "3.5.3",
		"prettier-plugin-astro": "^0.14.0",
		"prettier-plugin-svelte": "^3.0.0",
		"prettier-plugin-tailwindcss": "^0.6.0",
		"rimraf": "6.0.1",
		"rollup": "4.40.0",
		"rollup-plugin-dts": "^6.1.1",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.6",
		"typescript": "5.8.3",
		"typescript-eslint": "^8.8.0",
		"vitest": "^3.0.0",
		"vue": "3.5.13",
		"vue-tsc": "^2.0.0"
	},
	"packageManager": "yarn@4.9.1"
}
