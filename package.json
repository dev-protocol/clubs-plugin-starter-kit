{
	"name": "@devprotocol/clubs-plugin-starter-kit",
	"version": "0.1.0",
	"type": "module",
	"description": "Template repository for using TypeScript",
	"main": "dist/index.js",
	"exports": {
		".": {
			"default": "./dist/index.js"
		}
	},
	"types": "./dist/src/index.d.ts",
	"files": [
		"dist/**/*.d.ts",
		"dist/**/*.js",
		"!**/*.test.*",
		"src"
	],
	"keywords": [
		"clubs-plugin"
	],
	"scripts": {
		"test": "ava || echo 'skip'",
		"preview": "astro --root .preview/preview.ssr dev",
		"preview:static": "astro --root .preview/preview.static dev",
		"build": "rollup -c",
		"pretest": "yarn build",
		"prebuild": "rimraf dist",
		"lint": "yarn lint:eslint && yarn lint:format",
		"lint:eslint": "eslint . --ext .ts,.js --fix",
		"lint:format": "prettier --write '**/*.{ts,js,tsx,jsx,astro,vue,svelte,json,md,yml}'",
		"prepack": "yarn test && yarn build",
		"prepare": "husky install"
	},
	"author": "",
	"license": "MPL-2.0",
	"dependencies": {
		"@devprotocol/dev-kit": "8.5.1",
		"@devprotocol/util-ts": "4.0.0",
		"bignumber.js": "9.1.2",
		"ethers": "6.7.1",
		"ramda": "0.29.1",
		"sass": "1.69.4"
	},
	"peerDependencies": {
		"@devprotocol/clubs-core": "^2.1.1"
	},
	"devDependencies": {
		"@astrojs/svelte": "^4.0.3",
		"@astrojs/tailwind": "^5.0.0",
		"@astrojs/vue": "^3.0.0",
		"@ava/typescript": "4.1.0",
		"@devprotocol/clubs-core": "2.1.1",
		"@rollup/plugin-typescript": "11.1.5",
		"@tailwindcss/typography": "^0.5.10",
		"@types/dotenv": "8.2.0",
		"@types/node": "18.18.6",
		"@types/ramda": "0.29.7",
		"@typescript-eslint/eslint-plugin": "6.8.0",
		"@typescript-eslint/parser": "6.8.0",
		"astro": "^3.0.12",
		"ava": "5.3.1",
		"dotenv": "16.3.1",
		"eslint": "8.51.0",
		"eslint-config-prettier": "9.0.0",
		"eslint-plugin-functional": "6.0.0",
		"husky": "8.0.3",
		"prettier": "3.0.3",
		"prettier-plugin-astro": "^0.12.0",
		"prettier-plugin-svelte": "^3.0.0",
		"rimraf": "5.0.1",
		"rollup": "3.29.4",
		"svelte": "^4.2.2",
		"tailwindcss": "3.3.3",
		"typescript": "5.2.2",
		"vue": "3.3.4"
	},
	"ava": {
		"files": [
			"**/*.test.ts"
		],
		"typescript": {
			"rewritePaths": {
				"/": "dist/"
			},
			"compile": false
		}
	}
}
