{
	"name": "@devprotocol/clubs-plugin-starter-kit",
	"version": "0.1.0",
	"type": "module",
	"description": "Template repository for using TypeScript",
	"main": "dist/index.js",
	"exports": {
		".": {
			"default": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"types": "./dist/index.d.ts",
	"files": [
		"dist/*.d.ts",
		"dist/*.js",
		"!**/*.test.*",
		"!dist/vitest.*",
		"src"
	],
	"keywords": [
		"clubs-plugin"
	],
	"scripts": {
		"test": "vitest",
		"preview": "astro --root .preview/preview.ssr dev",
		"preview:static": "astro --root .preview/preview.static dev",
		"build": "rollup -c",
		"prebuild": "rimraf dist",
		"lint": "yarn lint:eslint && yarn lint:format",
		"lint:eslint": "eslint . --fix",
		"lint:format": "prettier --write '**/*.{ts,js,mjs,cjs,tsx,jsx,astro,vue,svelte,json,md,yml}'",
		"prepack": "yarn test --run && yarn prebuild && yarn build",
		"prepare": "husky",
		"typecheck": "astro check && tsc --noEmit && svelte-check && vue-tsc --noEmit --p tsconfig.vue.json"
	},
	"author": "",
	"license": "MPL-2.0",
	"dependencies": {
		"@devprotocol/dev-kit": "8.7.0",
		"@devprotocol/util-ts": "4.0.0",
		"bignumber.js": "9.3.1",
		"ramda": "0.32.0",
		"sass": "1.93.2"
	},
	"peerDependencies": {
		"@devprotocol/clubs-core": "^2.1.1 || ^3.0.0",
		"ethers": "^6.0.0"
	},
	"devDependencies": {
		"@astrojs/check": "0.9.4",
		"@astrojs/svelte": "7.2.0",
		"@astrojs/vue": "5.1.1",
		"@devprotocol/clubs-core": "3.28.0",
		"@eslint/js": "^9.12.0",
		"@rollup/plugin-typescript": "12.1.4",
		"@tailwindcss/typography": "^0.5.10",
		"@tailwindcss/vite": "^4.0.6",
		"@types/dotenv": "8.2.3",
		"@types/eslint-config-prettier": "^6.11.3",
		"@types/eslint__js": "^8.42.3",
		"@types/node": "22.18.10",
		"@types/ramda": "0.31.1",
		"astro": "5.14.5",
		"dotenv": "17.2.3",
		"eslint": "^9.12.0",
		"eslint-config-prettier": "10.1.8",
		"eslint-plugin-functional": "^9.0.0",
		"ethers": "6.15.0",
		"globals": "^16.0.0",
		"husky": "9.1.7",
		"prettier": "3.6.2",
		"prettier-plugin-astro": "^0.14.0",
		"prettier-plugin-svelte": "^3.0.0",
		"prettier-plugin-tailwindcss": "^0.7.0",
		"rimraf": "6.0.1",
		"rollup": "4.52.4",
		"rollup-plugin-dts": "^6.1.1",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.6",
		"typescript": "5.9.3",
		"typescript-eslint": "^8.8.0",
		"vitest": "^3.0.0",
		"vue": "3.5.22",
		"vue-tsc": "^3.0.0"
	},
	"packageManager": "yarn@4.10.3"
}
