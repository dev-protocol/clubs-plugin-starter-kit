{
	"name": "@devprotocol/clubs-plugin-starter-kit",
	"version": "0.1.0",
	"type": "module",
	"description": "Template repository for using TypeScript",
	"main": "dist/index.js",
	"exports": {
		".": {
			"default": "./dist/index.js"
		}
	},
	"types": "./dist/src/index.d.ts",
	"files": [
		"dist/**/*.d.ts",
		"dist/**/*.js",
		"!**/*.test.*",
		"src"
	],
	"keywords": [
		"clubs-plugin"
	],
	"scripts": {
		"test": "ava || echo 'skip'",
		"preview": "astro --root preview dev",
		"build": "rollup -c",
		"pretest": "yarn build",
		"prebuild": "rimraf dist",
		"lint": "yarn lint:eslint && yarn lint:format",
		"lint:eslint": "eslint . --ext .ts,.js --fix",
		"lint:format": "prettier --write '**/*.{ts,js,json,md,yml}'",
		"prepack": "yarn test && yarn build",
		"prepare": "husky install"
	},
	"author": "",
	"license": "MPL-2.0",
	"dependencies": {
		"@devprotocol/clubs-core": "0.44.0",
		"@devprotocol/dev-kit": "7.3.4",
		"@devprotocol/util-ts": "3.0.0",
		"bignumber.js": "9.1.1",
		"ethers": "5.7.2",
		"ramda": "0.29.0",
		"sass": "1.62.1"
	},
	"devDependencies": {
		"@astrojs/tailwind": "3.1.2",
		"@astrojs/vue": "2.1.1",
		"@ava/typescript": "4.0.0",
		"@rollup/plugin-typescript": "11.1.0",
		"@types/dotenv": "8.2.0",
		"@types/node": "18.16.6",
		"@types/ramda": "0.29.1",
		"@typescript-eslint/eslint-plugin": "5.59.5",
		"@typescript-eslint/parser": "5.59.5",
		"astro": "2.4.4",
		"ava": "5.2.0",
		"dotenv": "16.0.3",
		"eslint": "8.40.0",
		"eslint-config-prettier": "8.8.0",
		"eslint-plugin-functional": "4.4.1",
		"husky": "8.0.3",
		"prettier": "2.8.8",
		"prettier-plugin-astro": "^0.8.0",
		"prettier-plugin-svelte": "^2.9.0",
		"rimraf": "5.0.0",
		"rollup": "3.21.6",
		"tailwindcss": "3.3.2",
		"typescript": "5.0.4",
		"vue": "3.2.47"
	},
	"ava": {
		"files": [
			"**/*.test.ts"
		],
		"typescript": {
			"rewritePaths": {
				"/": "dist/"
			},
			"compile": false
		}
	}
}
