{
	"name": "@devprotocol/clubs-plugin-starter-kit",
	"version": "0.1.0",
	"type": "module",
	"description": "Template repository for using TypeScript",
	"main": "dist/index.js",
	"exports": {
		".": {
			"default": "./dist/index.js"
		}
	},
	"types": "./dist/index.d.ts",
	"files": [
		"dist/**/*.d.ts",
		"dist/**/*.js",
		"!**/*.test.*",
		"src"
	],
	"keywords": [
		"clubs-plugin"
	],
	"scripts": {
		"test": "ava || echo 'skip'",
		"preview": "astro --root preview dev",
		"build": "rollup -c",
		"pretest": "yarn build",
		"prebuild": "rimraf dist",
		"lint": "yarn lint:eslint && yarn lint:format",
		"lint:eslint": "eslint . --ext .ts,.js --fix",
		"lint:format": "prettier --write '**/*.{ts,js,json,md,yml}'",
		"prepack": "yarn test && yarn build",
		"prepare": "husky install"
	},
	"author": "",
	"license": "MPL-2.0",
	"dependencies": {
		"@devprotocol/clubs-core": "0.37.1",
		"@devprotocol/dev-kit": "7.3.2",
		"@devprotocol/util-ts": "3.0.0",
		"bignumber.js": "9.1.1",
		"ethers": "5.7.2",
		"ramda": "0.28.0",
		"sass": "1.60.0"
	},
	"devDependencies": {
		"@astrojs/tailwind": "3.1.1",
		"@astrojs/vue": "2.1.0",
		"@astrojs/svelte": "^2.1.0",
		"@ava/typescript": "4.0.0",
		"@rollup/plugin-typescript": "11.0.0",
		"@types/dotenv": "8.2.0",
		"@types/node": "18.15.8",
		"@types/ramda": "0.28.23",
		"@typescript-eslint/eslint-plugin": "5.56.0",
		"@typescript-eslint/parser": "5.56.0",
		"astro": "^2.1.0",
		"ava": "5.2.0",
		"dotenv": "16.0.3",
		"eslint": "8.36.0",
		"eslint-config-prettier": "8.8.0",
		"eslint-plugin-functional": "4.4.1",
		"husky": "8.0.3",
		"prettier": "2.8.7",
		"prettier-plugin-astro": "^0.8.0",
		"prettier-plugin-svelte": "^2.9.0",
		"rimraf": "4.4.1",
		"rollup": "3.20.2",
		"tailwindcss": "3.2.7",
		"typescript": "5.0.2",
		"vue": "3.2.47",
		"svelte": "^3.54.0"
	},
	"ava": {
		"files": [
			"**/*.test.ts"
		],
		"typescript": {
			"rewritePaths": {
				"/": "dist/"
			},
			"compile": false
		}
	}
}
