{
	"name": "@devprotocol/clubs-plugin-starter-kit",
	"version": "0.1.0",
	"type": "module",
	"description": "Template repository for using TypeScript",
	"main": "dist/index.js",
	"exports": {
		".": {
			"default": "./dist/index.js"
		}
	},
	"types": "./dist/index.d.ts",
	"files": [
		"dist/**/*.d.ts",
		"dist/**/*.js",
		"!**/*.test.*",
		"src"
	],
	"scripts": {
		"test": "ava || echo 'skip'",
		"preview": "astro --root preview dev",
		"build": "rollup -c",
		"pretest": "yarn build",
		"prebuild": "rimraf dist",
		"lint": "yarn lint:eslint && yarn lint:format",
		"lint:eslint": "eslint . --ext .ts,.js --fix",
		"lint:format": "prettier --write '**/*.{ts,js,json,md,yml}'",
		"prepack": "yarn test && yarn build",
		"prepare": "husky install"
	},
	"author": "Dev Protocol",
	"license": "MPL-2.0",
	"dependencies": {
		"@devprotocol/clubs-core": "0.19.7",
		"@devprotocol/dev-kit": "7.1.2",
		"@devprotocol/util-ts": "3.0.0",
		"bignumber.js": "9.1.1",
		"ethers": "5.7.2",
		"ramda": "0.28.0"
	},
	"devDependencies": {
		"@astrojs/tailwind": "2.1.3",
		"@astrojs/vue": "1.2.2",
		"@ava/typescript": "3.0.1",
		"@rollup/plugin-typescript": "11.0.0",
		"@types/dotenv": "8.2.0",
		"@types/node": "18.11.18",
		"@types/ramda": "0.28.21",
		"@typescript-eslint/eslint-plugin": "5.48.2",
		"@typescript-eslint/parser": "5.48.2",
		"astro": "1.9.2",
		"ava": "5.1.1",
		"dotenv": "16.0.3",
		"eslint": "8.32.0",
		"eslint-config-prettier": "8.6.0",
		"eslint-plugin-functional": "4.4.1",
		"husky": "8.0.3",
		"prettier": "2.8.3",
		"prettier-plugin-astro": "^0.7.2",
		"prettier-plugin-svelte": "^2.9.0",
		"rimraf": "4.1.1",
		"rollup": "3.10.0",
		"tailwindcss": "3.2.4",
		"typescript": "4.9.4",
		"vue": "3.2.45"
	},
	"ava": {
		"files": [
			"**/*.test.ts"
		],
		"typescript": {
			"rewritePaths": {
				"/": "dist/"
			},
			"compile": false
		}
	},
	"repository": "git+https://github.com/dev-protocol/template-repos-ts.git",
	"bugs": {
		"url": "https://github.com/dev-protocol/template-repos-ts/issues"
	},
	"homepage": "https://github.com/dev-protocol/template-repos-ts#readme",
	"private": true
}
