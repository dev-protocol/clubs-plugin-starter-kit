{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"noEmit": false,
		"outDir": "dist",
		"declaration": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"jsx": "preserve",
		"types": ["astro/client"]
	},
	"include": [
		"src",
		"preview",
		"config.js",
		"rollup.config.js",
		"tailwind.config.mjs"
	]
}
