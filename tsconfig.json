{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"lib": ["ESNext"],
		"outDir": "dist",
		"declaration": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"jsx": "preserve",
		"verbatimModuleSyntax": true
	},
	"include": [
		"src/**/*",
		".preview/**/*",
		"rollup.config.js",
		"tailwind.config.mjs",
		"vitest.config.ts"
	]
}
